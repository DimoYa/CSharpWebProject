@model MyResourcePlanning.Web.BindingModels.Skill.SkillEditBindingModel

@{
    ViewData["Title"] = "Edit Skill";
}

<div class="jumbotron">

    <h1 class="text-center" mt-3>Edit Skill</h1>
    <form id="editSkill" method="post" class="w-50 mx-auto">
        <hr class="mt-3 bg-resources hr-2" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <label asp-for="Name" class="font-weight-bold"></label>
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-graduation-cap"></i> </span>
                </div>
                <input asp-for="Name" class="form-control" placeholder="Edit skill name..."/>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <label asp-for="SkillCategory" class="font-weight-bold"></label>
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-layer-group"></i> </span>
                </div>
                <select asp-for="SkillCategory" class="form-control">
                    @foreach (var option in Model.SkillCategories)
                    {
                        <option>@option.Name</option>
                    }foreach
                </select>
            </div>
            <span asp-validation-for="SkillCategory" class="text-danger"></span>
        </div>
        <hr class="mt-3 bg-resources hr-2" />
        <partial name="_SaveCancelButtonsPartial" />
    </form>
</div>

@section Scripts {
    <script>
        getErrorMsgs('#editSkill');
    </script>>
}
