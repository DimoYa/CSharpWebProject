@model MyResourcePlanning.Web.ViewModels.Calendar.CalendarAllViewModel

@{
    ViewData["Title"] = "Edit";
}

    <div class="jumbotron">
        <h1 class="text-center" mt-3>Edit calendar period</h1>
        <form id="createCalendar" method="post" class="w-50 mx-auto">
            <hr class="mt-3 bg-resources hr-2" />
                <div class="form-group">
                    <div class="d-flex justify-content-center">
                        <label asp-for="Day" class="font-weight-bold"></label>
                    </div>
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fas fa-calendar-alt"></i></span>
                        </div>
                        <input asp-for="Day" disabled class="form-control" />
                    </div>
            </div>
            <div class="form-group">
                <div class="checkbox d-flex justify-content-center">
                    <label class="font-weight-bold" asp-for="IspublicHoliday">
                        <input asp-for="IspublicHoliday" />
                        @Html.DisplayNameFor(m => m.IspublicHoliday)
                    </label>
                </div>
            </div>
            <hr class="mt-3 bg-resources hr-2" />
            <partial name="_SaveCancelButtonsPartial" />
        </form>
    </div>

