@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="text-center">@ViewData["Title"]</h4>
<div class="w-50 mx-auto">
    <partial name="_StatusMessage" for="StatusMessage" />
</div>

<form id="profile-form" method="post" class="w-50 mx-auto">
    <hr class="mt-3 bg-resources hr-2" />
    <div class="form-group">
        <div class="d-flex justify-content-center">
            <label asp-for="Username" class="font-weight-bold"></label>
        </div>
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
            </div>
            <input asp-for="Username" disabled class="form-control" />
        </div>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.Email" class="font-weight-bold"></label>
        </div>

        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
            </div>
            <input asp-for="Input.Email" class="form-control" placeholder="Email..." />
        </div>

        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.PhoneNumber" class="font-weight-bold"></label>
        </div>
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
            </div>
            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="phone number..." />
        </div>
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>
    <hr class="mt-3 bg-resources hr-2" />
    <div class="d-flex justify-content-center">
        <button id="update-profile-button" type="submit" class="btn btn-primary btn-block">
            Save
        </button>
    </div>
</form>

@section scripts {
    <script src="~/js/errorMessages.js"></script>
    <script>
        getErrorMsgs('#profile-form');
    </script>
}
