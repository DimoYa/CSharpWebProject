@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="text-center">@ViewData["Title"]</h4>
<div class="w-50 mx-auto">
    <partial name="_StatusMessage" for="StatusMessage" />
</div>

<form id="change-password-form" method="post" class="w-50 mx-auto">
    <hr class="mt-3 bg-resources hr-2" />
    <div class="form-group">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.OldPassword" class="font-weight-bold"></label>
        </div>
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <input asp-for="Input.OldPassword" class="form-control" placeholder="Old Password..." />
        </div>
        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.NewPassword" class="font-weight-bold"></label>
        </div>
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <input asp-for="Input.NewPassword" class="form-control" placeholder="New Password..." />
        </div>
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.ConfirmPassword" class="font-weight-bold"></label>
        </div>
        <div class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password..." />
        </div>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <hr class="mt-3 bg-resources hr-2" />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary btn-block">
            Update password
        </button>
    </div>
</form>

@section scripts{
    <script type="text/javascript" src="~/js/errorMessages.js"></script>
    <script>
        getErrorMsgs('#change-password-form');
    </script>
}

