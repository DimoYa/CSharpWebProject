@model List<MyResourcePlanning.Web.ViewModels.Calendar.CalendarMyViewModel>

@{
    ViewData["Title"] = "MyCalendar";
}

<div class="jumbotron">
    <h1 class="text-center">My Calendar</h1>
    <hr class="bg-resources hr-2" />
    <table class="table table-striped table-bordered sortable" cellspacing="0" width="100%" id="table-id">
        <tbody>
            <tr>
                <td>From date:</td>
                <td><input type="text" id="min" name="min"></td>
            </tr>
            <tr>
                <td>To date:</td>
                <td><input type="text" id="max" name="max"></td>
            </tr>
        </tbody>
    </table>
    <table id="myTable" class="table table-striped table-bordered sortable" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th scope="col">Day</th>
                <th scope="col">Public holiday</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Day</td>
                    <td>@Model[i].AbsenceType</td>
                    <td>
                        <a onclick="actionConfirmation('@Model[i].CalendarId', 'Calendar', 'DeleteAbsence')" class="btn bg-transparent"><i class="far fa-trash-alt" data-placement="top" title="Delete period"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<partial name="_NotificationPartial" />

@section scripts{
    <script type="text/javascript" src="~/js/jquery.datetimepicker.full.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap-sortable.js"></script>
    <script type="text/javascript" src="~/js/moment.js"></script>
    <script>
        window.onload = () => {
            $('#min, #max').datetimepicker({
                timepicker: false,
                format: 'd/m/Y',
                lang: 'en',
                todayButton: true,
                dayOfWeekStart: '1',
            });
        };
    </script>
    <script src="~/js/customTableFilter.js"></script>
    <script src="~/js/notificationMsg.js"></script>
}
}
