@model MyResourcePlanning.Web.BindingModels.Calendar.CalnedarCreatePeriodBindingModel

@{
    ViewData["Title"] = "Create calendar";
}

<div class="jumbotron">
    <h1 class="text-center" mt-3>Create new calendar period</h1>
    <form id="createCalendar" method="post" class="w-50 mx-auto">
        <hr class="mt-3 bg-resources hr-2" />
        <div class="d-flex justify-content-between">
            <div class="form-group w-45">
                <div class="d-flex justify-content-center">
                    <label asp-for="StartDate" class="font-weight-bold"></label>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fas fa-calendar-alt"></i></span>
                    </div>
                    <input asp-for="StartDate" autocomplete="off" id="startDate" class="form-control" placeholder="dd/MM/yyyy" />
                </div>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group w-45">
                <div class="d-flex justify-content-center">
                    <label asp-for="EndDate" class="font-weight-bold"></label>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fas fa-calendar-alt"></i> </span>
                    </div>
                    <input asp-for="EndDate" autocomplete="off" id="endDate" class="form-control" placeholder="dd/MM/yyyy" />
                </div>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox d-flex justify-content-center">
                <label class="font-weight-bold" asp-for="IspublicHoliday">
                    <input asp-for="IspublicHoliday" />
                    @Html.DisplayNameFor(m => m.IspublicHoliday)
                </label>
            </div>
        </div>
        <div class="form-group">
            <span asp-validation-for="ErrorMessage" class="text-danger"></span>
        </div>
        <hr class="mt-3 bg-resources hr-2" />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-block" onclick=" getErrorMsgs('#createForm')" ;>
                Create calendar period
            </button>
        </div>
    </form>
</div>

@section scripts{
    <script type="text/javascript" src="~/js/jquery.datetimepicker.full.min.js"></script>
    <script>
        window.onload = () => {
            $('#startDate, #endDate').datetimepicker({
                timepicker: false,
                format: 'd/m/Y',
                minDate: '-1970/01/01',
                lang: 'en',
                todayButton: true,
                dayOfWeekStart: '1',
            });
        };
    </script>
    <script>
        getErrorMsgs('#createCalendar');
    </script>
    <script>
    wrapInASpan(['End date must be greater than Start Date',
        'Date cannot be in the past', 'Some days in the period are already added!'],
        'alert alert-danger');
    </script>
}

