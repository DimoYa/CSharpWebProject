@model MyResourcePlanning.Web.ViewModels.Request.RequestCreateBaseViewModel


@{
    ViewData["Title"] = "Create";
}

<div class="jumbotron">

    <h1 class="text-center" mt-3>Create Request</h1>
    <form id="registerForm" method="post" class="w-50 mx-auto">
        <hr class="mt-3 bg-resources hr-2" />
        <div class="d-flex justify-content-between">
            <div class="form-group w-45">
                <div class="d-flex justify-content-center">
                    <label asp-for="BindingModel.StartDate" class="font-weight-bold"></label>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fas fa-calendar-alt"></i></span>
                    </div>
                    <input asp-for="BindingModel.StartDate" id="datetimepicker" class="form-control" type="text" placeholder="Start Date..." />
                </div>
                <span asp-validation-for="BindingModel.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group w-45">
                <div class="d-flex justify-content-center">
                    <label asp-for="BindingModel.EndDate" class="font-weight-bold"></label>
                </div>
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fas fa-calendar-alt"></i> </span>
                    </div>
                    <input asp-for="BindingModel.EndDate" id="datetimepicker" class="form-control" type="text" placeholder="Last Name..." />
                </div>
                <span asp-validation-for="BindingModel.EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <label asp-for="BindingModel.Resource" class="font-weight-bold"></label>
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <select id="dropdown" class="form-control">
                    <option selected disabled>ID;First Name;Last Name; Skills</option>
                    @foreach (var option in Model.Resources)
                    {
                        <option>@option.Id;@option.FirstName; @option.LastName; @string.Join(Environment.NewLine, @option.Skills)</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <label asp-for="BindingModel.Project" class="font-weight-bold"></label>
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-business-time"></i> </span>
                </div>
                <select id="dropdown" class="form-control">
                    <option selected disabled>ID;Project Name;Start Date;End Date</option>
                    @foreach (var option in Model.Projects)
                    {
                        <option>@option.Id;@option.Name;@option.StartDate;@option.EndDate</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <label asp-for="BindingModel.Hours" class="font-weight-bold"></label>
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-clock"></i> </span>
                </div>
                <input asp-for="BindingModel.Hours" class="form-control" type="number" step="any" placeholder="Enter working hours..." />
            </div>
            <span asp-validation-for="BindingModel.Hours" class="text-danger"></span>
        </div>
        <hr class="mt-3 bg-eventures hr-2" />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-block">
                Create New Request
            </button>
        </div>
    </form>
</div>

@section scripts{
    <script src="/jquery.js"></script>
    <script src="/build/jquery.datetimepicker.full.min.js"></script>

    <script>
        $('#datetimepicker').datetimepicker({
            format: 'd.m.Y',
            lang: 'en'
        });
    </script>
    <script type="text/javascript" src="~/js/twoColumnDropDown.js"></script>
    <script>
        twoColumnDropDown('#dropdown option', ';', 0, 34);
    </script>>
}