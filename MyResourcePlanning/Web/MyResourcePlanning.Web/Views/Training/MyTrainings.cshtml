@model List<MyResourcePlanning.Web.ViewModels.Training.TrainingUserViewModel>

@{
    ViewData["Title"] = "My Trainings";
}

<div class="jumbotron">
    <h1 class="text-center">My Trainings</h1>
    <hr class="bg-resources hr-2" />
    <partial name="_SearchAndFilterHeaderPartial" />
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-sm sortable" cellspacing="0" width="100%" id="table-id">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Status</th>
                    <th scope="col">Due Date</th>
                    <th scope="col">State</th>
                </tr>
            </thead>
            <tbody id="myTable">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].TrainingName</td>
                        <td>@Model[i].TrainingType</td>
                        <td>@Model[i].TrainingStatus</td>
                        <td>@Model[i].TrainingDueDate</td>
                        <td>@Model[i].Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <partial name="_SearchAndFilterFooterPartial" />
</div>
@section scripts{
    <script type="text/javascript" src="~/js/paging.js"></script>
    <script type="text/javascript" src="~/js/search.js"></script>
    <script type="text/javascript" src="~/js/bootstrap-sortable.js"></script>
    <script type="text/javascript" src="~/js/moment.min.js"></script>
}
