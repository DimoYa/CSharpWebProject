@model List<MyResourcePlanning.Web.ViewModels.Training.TrainingAllUsersView>

@{
    ViewData["Title"] = "AllUsersTrainings";
}

<div class="jumbotron">
    <h1 class="text-center">Manage user's trainings</h1>
    <hr class="bg-resources hr-2" />
    <partial name="_SearchAndFilterHeaderPartial" />
    <div class="table-responsive">
        <table class="table table-striped table-bordered sortable" cellspacing="0" width="100%" id="table-id">
            <thead>
                <tr>
                    <th scope="col">Training</th>
                    <th scope="col">Resource</th>
                    <th scope="col">Type</th>
                    <th scope="col">Status</th>
                    <th scope="col">Due Date</th>
                    <th scope="col">State</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody id="myTable">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].TrainingName</td>
                        <td>@Model[i].UserName</td>
                        <td>@Model[i].TrainingType</td>
                        <td>@Model[i].TrainingStatus</td>
                        <td>@Model[i].TrainingDueDate</td>
                        <td>@Model[i].Status</td>
                        <td>
                            <a asp-action="ChangeUserTrainingStatus" asp-route-id="@string.Format("{0}_{1}", Model[i].TrainingId, Model[i].UserId)" class="btn bg-transparent"><i class="fas fa-user-edit" data-placement="top" title="Manage training status"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <partial name="_SearchAndFilterFooterPartial" />
</div>
<partial name="_NotificationPartial" />
@section scripts{
    <script type="text/javascript" src="~/js/paging.js"></script>
    <script type="text/javascript" src="~/js/search.js"></script>
    <script type="text/javascript" src="~/js/bootstrap-sortable.js"></script>
    <script type="text/javascript" src="~/js/moment.min.js"></script>
}
