@model MyResourcePlanning.Web.BindingModels.Training.TrainingAssignBindingModel

@{
    ViewData["Title"] = "AssignToUser";
}

<div class="jumbotron">

    <h1 class="text-center" mt-3>Assign training to resource</h1>
    <form id="assignTraining" method="post" class="w-50 mx-auto">
        <hr class="mt-3 bg-resources hr-2" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <label asp-for="Name" class="font-weight-bold"></label>
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-graduation-cap"></i> </span>
                </div>
                <input readonly asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <label asp-for="Resource" class="font-weight-bold"></label>
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <select asp-for="Resource" class="form-control">
                    <option selected disabled value="">Select resource</option>
                    @foreach (var option in Model.Resources)
                    {
                        <option>@option.FirstName @option.LastName</option>
                    }
                </select>
            </div>
            <span asp-validation-for="Resource" class="text-danger"></span>
        </div>
        <hr class="mt-3 bg-resources hr-2" />
        <partial name="_SaveCancelButtonsPartial" />
    </form>
</div>

@section Scripts {
    <script>
        getErrorMsgs('#assignTraining');
    </script>
}
