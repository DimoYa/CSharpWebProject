@model Tuple<List<MyResourcePlanning.Web.ViewModels.Skill.SkillsByCategoryViewModel>, IList<string>>


@{
    ViewData["Title"] = "All Skills";
}

<div class="jumbotron">
    <h1 class="text-center">All Skills by categories</h1>
    <hr class="bg-resources hr-2" />
    <div class="accordion" id="accordionExample">
        @for (int i = 0; i < Model.Item1.Count; i++)
        {
            <div class="panel-group">
                <div class="panel panel-default">

                    <div class="panel-heading card text-white bg-info mb-3 cl" id="headingOne">
                        <div>
                            <h4 class="mb-0 text-center">
                                <span class="center-block">@Model.Item1[i].Name</span>
                                <span class="float-right">
                                    <a asp-action="EditCategory" asp-route-id="@Model.Item1[i].Id" class="btn bg-transparent"><i class="fas fa-edit fa-1x text-white" data-placement="top" title="Edit category name"></i></a>
                                    <a asp-action="DeleteCategory" asp-route-id="@Model.Item1[i].Id" class="btn bg-transparent"><i class="far fa-trash-alt fa-1x text-white" data-placement="top" title="Delete category and all skills beyound it"></i></a>
                                </span>
                            </h4>
                        </div>
                        <button type="button" data-toggle="collapse" data-target="#@("collapseOne"+i)"><i class="far fa-object-ungroup fa-2x text-success"></i></button>
                    </div>
                    <div id="@("collapseOne"+i)" class="collapse" aria-labelledby="headingOne">
                        <ul class="list-group mb-3">
                            @foreach (var skill in @Model.Item1[i].Skills.OrderBy(s => s.Name))
                            {
                                <li class="list-group-item">
                                    @skill.Name
                                    <div class="float-right">
                                        @if (!Model.Item2.Any(s=> s == @skill.Id))
                                        {
                                            <a asp-action="AddSkill" asp-route-id="@skill.Id" class="btn bg-transparent"><i class="fa fa-plus" data-placement="top" title="Add skill to my profile"></i></a>
                                        }
                                        <a asp-action="EditSkill" asp-route-id="@skill.Id" class="btn bg-transparent"><i class="fas fa-edit" data-placement="top" title="Edit skill"></i></a>
                                        <a asp-action="DeleteSkill" asp-route-id="@skill.Id" class="btn bg-transparent"><i class="far fa-trash-alt" data-placement="top" title="Delete skill"></i></a>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $(".collapse.show").each(function () {
                $(this).prev(".panel-heading").find(".far").addClass("fa-object-group").removeClass("fa-object-ungroup");
            });

            $(".collapse").on('show.bs.collapse', function () {
                $(this).prev(".panel-heading").find(".far").removeClass("fa-object-ungroup").addClass("fa-object-group");
            }).on('hide.bs.collapse', function () {
                $(this).prev(".panel-heading").find(".far").removeClass("fa-object-group").addClass("fa-object-ungroup");
            });
        });
    </script>
}