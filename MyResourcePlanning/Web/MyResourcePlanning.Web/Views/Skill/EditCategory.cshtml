@model MyResourcePlanning.Models.SkillCategory

@{
    ViewData["Title"] = "Edit Category";
}

<div class="jumbotron">

    <h1 class="text-center" mt-3>Create New Skill Category</h1>
    <form id="createCategory" method="post" class="w-50 mx-auto">
        <hr class="mt-3 bg-resources hr-2" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <label asp-for="Name" class="font-weight-bold"></label>
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-fist-raised"></i> </span>
                </div>
                <input asp-for="Name" class="form-control" placeholder="Enter name..." />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <hr class="mt-3 bg-resources hr-2" />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success btn-block">Save</button>
        </div>
    </form>
    <div class="w-50 mx-auto d-flex justify-content-center mt-3">
        <button onclick="window.history.back()" class="btn btn-danger btn-block">Cancel</button>
    </div>
</div>

@section Scripts {
}
