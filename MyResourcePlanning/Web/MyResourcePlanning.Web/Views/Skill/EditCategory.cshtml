@model MyResourcePlanning.Models.SkillCategory

@{
    ViewData["Title"] = "Edit Category";
}

<div class="jumbotron">

    <h1 class="text-center" mt-3>Edit Skill Category</h1>
    <form id="editCategory" method="post" class="w-50 mx-auto">
        <hr class="mt-3 bg-resources hr-2" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <label asp-for="Name" class="font-weight-bold"></label>
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-layer-group"></i> </span>
                </div>
                <input asp-for="Name" class="form-control" placeholder="Edit category name..." />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <hr class="mt-3 bg-resources hr-2" />
        <div class="d-flex justify-content-between">
            <div class="form-group w-45">
                <button type="submit" class="btn btn-success btn-block mr-3">Save</button>
            </div>
            <div class="form-group w-45">
                <button type="button" class="btn btn-danger btn-block mr-3" value="Cancel" onclick="window.history.back()">Cancel</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
<script>
    getErrorMsgs('#editCategory');
</script>>
}
