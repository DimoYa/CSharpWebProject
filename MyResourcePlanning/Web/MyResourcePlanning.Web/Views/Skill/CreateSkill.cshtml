@model MyResourcePlanning.Web.BindingModels.Skill.SkillCreateBaseModel

@{
    ViewData["Title"] = "Create Skill";
}

<div class="jumbotron">

    <h1 class="text-center" mt-3>Create New Skill</h1>
    <form id="createSkill" method="post" class="w-50 mx-auto">
        <hr class="mt-3 bg-resources hr-2" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <label asp-for="BindingModel.Name" class="font-weight-bold"></label>
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-graduation-cap"></i> </span>
                </div>
                <input asp-for="BindingModel.Name" class="form-control" placeholder="Enter skill name..." />
            </div>
            <span asp-validation-for="BindingModel.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="d-flex justify-content-center">
                <label asp-for="BindingModel.SkillCategory" class="font-weight-bold"></label>
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fas fa-layer-group"></i> </span>
                </div>
                <select asp-for="BindingModel.SkillCategory" class="form-control">
                    <option selected disabled value="">Select skill category</option>
                    @foreach (var option in Model.SkillCategories)
                    {
                        <option class="p-4">@option.Name</option>
                    }
                </select>
            </div>
            <span asp-validation-for="BindingModel.SkillCategory" class="text-danger"></span>
        </div>
        <hr class="mt-3 bg-resources hr-2" />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-block">
                Create New Skill Category
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        getErrorMsgs('#createSkill');
    </script>>
}
